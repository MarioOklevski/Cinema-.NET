@{
}

@model List<CinemaAdminApp.Models.Order>


<div class="container">


    <div class="row m-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Details</th>
                    <th scope="col">Number of Movies</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];

                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@item.User.UserName</td>
                        <td>@item.Movies.Count</td>
                        <td><a asp-route-orderId="@item.Id" asp-action="Details" class="btn btn-info">View Order</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>