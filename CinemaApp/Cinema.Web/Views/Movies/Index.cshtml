@model List<Cinema.Web.Models.Domain.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Movies" asp-action="Create">Add new Movie</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 50rem;">
                <img class="card-img-top" src="@item.MovieImage" style="height: 400px" alt="Image for Movie" />

                <div class="card-body overflow-auto">
                    <h3 class="card-title">@item.MovieName</h3>
                    <p class="card-text">@item.MovieDescriprtion</p>


                    <h6>Rating: @item.Rating</h6>
                    <h6>Price: @item.MoviePrice</h6>
                </div>

                <div class="card-footer">
                    <a asp-controller="Movies" asp-action="AddMovieToCart" class="btn btn-info">Add to Cart</a>
                    <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>

        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>
