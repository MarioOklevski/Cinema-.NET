@model Cinema.Domain.DTO.ShoppingCartDto


<div class="container">

    <div class="row m-5">
        <a asp-action="OrderNow" class="btn btn-success">Order Now</a>
    </div>

    <div class="row m-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Movie Name</th>
                    <th scope="col">Movie Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.MovieInShoppingCarts.Count; i++)
                {
                    var item = Model.MovieInShoppingCarts[i];

                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@item.Movie.MovieName</td>
                    <td>@item.Movie.MoviePrice</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Movie.MoviePrice * item.Quantity)</td>
                    <td><a asp-route-movieId="@item.MovieId" asp-action="DeleteMovieFromShoppingCart" class="btn btn-danger">Delete</a></td>
                </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th scope="col">Total Price</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
